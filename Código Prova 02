numero = int(input("Fatorial de: ") )

resultado=1
count=1

while count <= numero:
    resultado *= count
    count += 1

print(f"O fatorial de {numero} por while é {resultado}")

n = numero
fact = 1
  
for i in range(1,n+1): 
    fact = fact * i 
      
print (f"O fatorial de {numero} por funcão é {fact} \n",end="") 



resultado=1
for n in range(1,numero+1):
    resultado *= n

print(f"O fatorial de {numero} por for é {resultado}")

def fatorial(numero):
    if numero==1:
        return 1
    else:
        return numero * fatorial(numero-1)

print(f"O fatorial de {numero} por funcao recessiva é {resultado}")
